<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.desktop.myfx.myfinalproject.Controller.DailyExpenseController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="15.0" style="-fx-background-color: #f5f7fa;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label style="-fx-text-fill: #2d3436;" text="Expense Management">
               <font>
                  <Font name="System Bold" size="26.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </Label>

            <VBox alignment="CENTER_LEFT" prefWidth="760.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 1);">
               <HBox alignment="CENTER_LEFT" prefHeight="40.0" spacing="15.0">
                  <Label alignment="CENTER_RIGHT" minWidth="120.0" style="-fx-text-fill: #4a4a4a;" text="Expense ID">
                     <font>
                        <Font name="Segoe UI" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtId" prefHeight="35.0" style="-fx-background-radius: 3; -fx-border-color: #e0e0e0; -fx-border-radius: 3;" HBox.hgrow="ALWAYS" />
               </HBox>

               <HBox alignment="CENTER_LEFT" prefHeight="40.0" spacing="15.0">
                  <Label alignment="CENTER_RIGHT" minWidth="120.0" style="-fx-text-fill: #4a4a4a;" text="Expense Date">
                     <font>
                        <Font name="Segoe UI" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtDate" prefHeight="35.0" style="-fx-background-radius: 3; -fx-border-color: #e0e0e0; -fx-border-radius: 3;" HBox.hgrow="ALWAYS" />
               </HBox>

               <HBox alignment="CENTER_LEFT" prefHeight="40.0" spacing="15.0">
                  <Label alignment="CENTER_RIGHT" minWidth="120.0" style="-fx-text-fill: #4a4a4a;" text="Description">
                     <font>
                        <Font name="Segoe UI" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtDescription" prefHeight="35.0" style="-fx-background-radius: 3; -fx-border-color: #e0e0e0; -fx-border-radius: 3;" HBox.hgrow="ALWAYS" />
               </HBox>

               <HBox alignment="CENTER_LEFT" prefHeight="40.0" spacing="15.0">
                  <Label alignment="CENTER_RIGHT" minWidth="120.0" style="-fx-text-fill: #4a4a4a;" text="Amount">
                     <font>
                        <Font name="Segoe UI" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtAmount" prefHeight="35.0" style="-fx-background-radius: 3; -fx-border-color: #e0e0e0; -fx-border-radius: 3;" HBox.hgrow="ALWAYS" />
               </HBox>

               <HBox alignment="CENTER_LEFT" prefHeight="40.0" spacing="15.0">
                  <Label alignment="CENTER_RIGHT" minWidth="120.0" style="-fx-text-fill: #4a4a4a;" text="Daily Expense">
                     <font>
                        <Font name="Segoe UI" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtExpense" prefHeight="35.0" style="-fx-background-radius: 3; -fx-border-color: #e0e0e0; -fx-border-radius: 3;" HBox.hgrow="ALWAYS" />
               </HBox>
            </VBox>

            <ButtonBar buttonMinWidth="100.0" prefHeight="45.0" prefWidth="760.0" style="-fx-background-color: transparent;">
               <buttons>
                  <Button mnemonicParsing="false" onAction="#btnSaveOnAction" style="-fx-background-color: #00b894; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3; -fx-pref-width: 100;" text="Save" />
                  <Button mnemonicParsing="false" onAction="#btnUpdateOnAction" style="-fx-background-color: #0984e3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3; -fx-pref-width: 100;" text="Update" />
                  <Button mnemonicParsing="false" onAction="#btnClearOnAction" style="-fx-background-color: #fdcb6e; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3; -fx-pref-width: 100;" text="Clear" />
                  <Button mnemonicParsing="false" onAction="#btnDeleteOnAction" style="-fx-background-color: #d63031; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3; -fx-pref-width: 100;" text="Delete" />
               </buttons>
            </ButtonBar>

            <TableView fx:id="tblExpense" onMouseClicked="#tableOnClick" prefHeight="300.0" prefWidth="760.0" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 1);">
               <columns>
                  <TableColumn fx:id="colId" style="-fx-font-weight: bold; -fx-alignment: CENTER;" text="Expense ID" />
                  <TableColumn fx:id="colDate" style="-fx-font-weight: bold; -fx-alignment: CENTER;" text="Expense Date" />
                  <TableColumn fx:id="colDescription" style="-fx-font-weight: bold; -fx-alignment: CENTER_LEFT;" text="Description" />
                  <TableColumn fx:id="colAmount" style="-fx-font-weight: bold; -fx-alignment: CENTER_RIGHT;" text="Amount" />
                  <TableColumn fx:id="colExpense" style="-fx-font-weight: bold; -fx-alignment: CENTER_RIGHT;" text="Daily Expense" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
