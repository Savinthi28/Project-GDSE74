<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.desktop.myfx.myfinalproject.Controller.ReportsController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="750.0" prefWidth="850.0" spacing="15" style="-fx-background-color: #f9fafb;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </padding>
         <children>
            <HBox alignment="CENTER" prefHeight="60.0" prefWidth="760.0" style="-fx-background-color: #3a6b7a;">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-text-fill: #ffffff;" text="Reports Management" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                  </Label>
               </children>
            </HBox>

            <VBox spacing="2.0" style="-fx-background-color: white; -fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 6, 0, 0, 1);">
               <HBox alignment="CENTER_LEFT" prefHeight="40.0" spacing="15">
                  <Label alignment="CENTER" prefHeight="36.0" prefWidth="120.0" style="-fx-font-weight: bold; -fx-text-fill: #374151;" text="Report ID">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblId" text="1">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </HBox>

               <HBox alignment="CENTER_LEFT" prefHeight="40.0" spacing="15">
                  <Label alignment="CENTER" prefHeight="36.0" prefWidth="120.0" style="-fx-font-weight: bold; -fx-text-fill: #374151;" text="Report Date">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtDate" style="-fx-background-radius: 4; -fx-border-color: #e5e7eb; -fx-border-radius: 4; -fx-border-width: 1;" HBox.hgrow="ALWAYS" />
               </HBox>

               <HBox alignment="CENTER_LEFT" prefHeight="40.0" spacing="15">
                  <Label alignment="CENTER" prefHeight="36.0" prefWidth="120.0" style="-fx-font-weight: bold; -fx-text-fill: #374151;" text="User ID">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtUserId" style="-fx-background-radius: 4; -fx-border-color: #e5e7eb; -fx-border-radius: 4; -fx-border-width: 1;" HBox.hgrow="ALWAYS" />
               </HBox>

               <HBox alignment="CENTER_LEFT" prefHeight="40.0" spacing="15">
                  <Label alignment="CENTER" prefHeight="36.0" prefWidth="120.0" style="-fx-font-weight: bold; -fx-text-fill: #374151;" text="Report Type">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtType" style="-fx-background-radius: 4; -fx-border-color: #e5e7eb; -fx-border-radius: 4; -fx-border-width: 1;" HBox.hgrow="ALWAYS" />
               </HBox>

               <HBox alignment="CENTER_LEFT" prefHeight="40.0" spacing="15">
                  <Label alignment="CENTER" prefHeight="36.0" prefWidth="120.0" style="-fx-font-weight: bold; -fx-text-fill: #374151;" text="Generate By">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtGenerateBy" style="-fx-background-radius: 4; -fx-border-color: #e5e7eb; -fx-border-radius: 4; -fx-border-width: 1;" HBox.hgrow="ALWAYS" />
               </HBox>
            </VBox>

            <ButtonBar prefHeight="50.0" prefWidth="100.0" style="-fx-background-color: transparent; -fx-padding: 15 0 20 0;">
               <buttons>
                  <Button mnemonicParsing="false" onAction="#btnSaveOnAction" style="-fx-background-color: #059669; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-pref-width: 100; -fx-pref-height: 35;" text="Save" />
                  <Button mnemonicParsing="false" onAction="#btnUpdateOnAction" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-pref-width: 100; -fx-pref-height: 35;" text="Update" />
                  <Button mnemonicParsing="false" onAction="#btnClearOnAction" style="-fx-background-color: #dc2626; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-pref-width: 100; -fx-pref-height: 35;" text="Clear" />
                  <Button mnemonicParsing="false" onAction="#btnDeleteOnAction" style="-fx-background-color: #d97706; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-pref-width: 100; -fx-pref-height: 35;" text="Delete" />
               </buttons>
            </ButtonBar>

            <TableView fx:id="tblReports" onMouseClicked="#tableOnClick" prefHeight="300.0" style="-fx-background-radius: 6; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 6, 0, 0, 1);" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colReportId" style="-fx-font-weight: bold; -fx-text-fill: #111827;" text="Report ID" />
                  <TableColumn fx:id="colDate" style="-fx-font-weight: bold; -fx-text-fill: #111827;" text="Report Date" />
                  <TableColumn fx:id="colUserId" style="-fx-font-weight: bold; -fx-text-fill: #111827;" text="User ID" />
                  <TableColumn fx:id="colType" style="-fx-font-weight: bold; -fx-text-fill: #111827;" text="Report Type" />
                  <TableColumn fx:id="colGenerateBy" style="-fx-font-weight: bold; -fx-text-fill: #111827;" text="Generate By" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
