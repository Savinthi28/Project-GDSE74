<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.desktop.myfx.myfinalproject.Controller.QualityCheckController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="750.0" prefWidth="900.0" spacing="15" style="-fx-background-color: #f5f7fa;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets top="25.0" right="25.0" bottom="25.0" left="25.0"/>
         </padding>
         <children>
            <Label text="Quality Check Management" style="-fx-font-weight: bold; -fx-text-fill: #2d3748;">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
               <padding>
                  <Insets bottom="15.0"/>
               </padding>
            </Label>

            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 6, 0, 0, 1);">
               <HBox alignment="CENTER_LEFT" spacing="15" prefHeight="40.0">
                  <Label text="Check ID" prefWidth="120.0" style="-fx-font-weight: bold; -fx-text-fill: #4a5568;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtCheckId" prefHeight="36.0" HBox.hgrow="ALWAYS" style="-fx-background-radius: 4; -fx-border-color: #e2e8f0; -fx-border-radius: 4; -fx-border-width: 1;"/>
               </HBox>

               <HBox alignment="CENTER_LEFT" spacing="15" prefHeight="40.0">
                  <Label text="Collection ID" prefWidth="120.0" style="-fx-font-weight: bold; -fx-text-fill: #4a5568;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtCollectionId" prefHeight="36.0" HBox.hgrow="ALWAYS" style="-fx-background-radius: 4; -fx-border-color: #e2e8f0; -fx-border-radius: 4; -fx-border-width: 1;"/>
               </HBox>

               <HBox alignment="CENTER_LEFT" spacing="15" prefHeight="40.0">
                  <Label text="Appearance" prefWidth="120.0" style="-fx-font-weight: bold; -fx-text-fill: #4a5568;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtAppearance" prefHeight="36.0" HBox.hgrow="ALWAYS" style="-fx-background-radius: 4; -fx-border-color: #e2e8f0; -fx-border-radius: 4; -fx-border-width: 1;"/>
               </HBox>

               <HBox alignment="CENTER_LEFT" spacing="15" prefHeight="40.0">
                  <Label text="Fat Content" prefWidth="120.0" style="-fx-font-weight: bold; -fx-text-fill: #4a5568;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtFatContent" prefHeight="36.0" HBox.hgrow="ALWAYS" style="-fx-background-radius: 4; -fx-border-color: #e2e8f0; -fx-border-radius: 4; -fx-border-width: 1;"/>
               </HBox>

               <HBox alignment="CENTER_LEFT" spacing="15" prefHeight="40.0">
                  <Label text="Temperature" prefWidth="120.0" style="-fx-font-weight: bold; -fx-text-fill: #4a5568;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtTemperature" prefHeight="36.0" HBox.hgrow="ALWAYS" style="-fx-background-radius: 4; -fx-border-color: #e2e8f0; -fx-border-radius: 4; -fx-border-width: 1;"/>
               </HBox>

               <HBox alignment="CENTER_LEFT" spacing="15" prefHeight="40.0">
                  <Label text="Check Date" prefWidth="120.0" style="-fx-font-weight: bold; -fx-text-fill: #4a5568;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtDate" prefHeight="36.0" HBox.hgrow="ALWAYS" style="-fx-background-radius: 4; -fx-border-color: #e2e8f0; -fx-border-radius: 4; -fx-border-width: 1;"/>
               </HBox>

               <HBox alignment="CENTER_LEFT" spacing="15" prefHeight="40.0">
                  <Label text="Notes" prefWidth="120.0" style="-fx-font-weight: bold; -fx-text-fill: #4a5568;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtNotes" prefHeight="36.0" HBox.hgrow="ALWAYS" style="-fx-background-radius: 4; -fx-border-color: #e2e8f0; -fx-border-radius: 4; -fx-border-width: 1;"/>
               </HBox>
            </VBox>

            <ButtonBar prefHeight="50.0" prefWidth="100.0" style="-fx-background-color: transparent; -fx-padding: 15 0 20 0;">
               <buttons>
                  <Button mnemonicParsing="false" onAction="#btnSaveOnAction" text="Save" style="-fx-background-color: #38a169; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-pref-width: 100; -fx-pref-height: 35;"/>
                  <Button mnemonicParsing="false" onAction="#btnUpdateOnAction" text="Update" style="-fx-background-color: #3182ce; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-pref-width: 100; -fx-pref-height: 35;"/>
                  <Button mnemonicParsing="false" onAction="#btnClearOnAction" text="Clear" style="-fx-background-color: #e53e3e; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-pref-width: 100; -fx-pref-height: 35;"/>
                  <Button mnemonicParsing="false" onAction="#btnDeleteOnAction" text="Delete" style="-fx-background-color: #dd6b20; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-pref-width: 100; -fx-pref-height: 35;"/>
               </buttons>
            </ButtonBar>

            <TableView fx:id="tblQualityCheck" onMouseClicked="#tableOnClick" prefHeight="300.0" style="-fx-background-radius: 6; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 6, 0, 0, 1);" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colCheckId" text="Check ID" style="-fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                  <TableColumn fx:id="colCollectionId" text="Collection ID" style="-fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                  <TableColumn fx:id="colAppearance" text="Appearance" style="-fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                  <TableColumn fx:id="colFatContent" text="Fat Content" style="-fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                  <TableColumn fx:id="colTemperature" text="Temperature" style="-fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                  <TableColumn fx:id="colDate" text="Check Date" style="-fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                  <TableColumn fx:id="colNotes" text="Notes" style="-fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>