               <children>
                  <Label alignment="CENTER" prefHeight="38.0" prefWidth="117.0" text="Duration">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtDuration" prefHeight="34.0" prefWidth="486.0" HBox.hgrow="ALWAYS" />
