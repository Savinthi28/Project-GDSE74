<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.desktop.myfx.myfinalproject.Controller.OrderController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="750.0" prefWidth="800.0" spacing="15" style="-fx-background-color: #f5f5f5;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="760.0" style="-fx-background-color: #3a6b7a;">
               <children>
                  <Label prefHeight="53.0" prefWidth="262.0" style="-fx-text-fill: white;" text="Order Management">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="350.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>

            <VBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="760.0" spacing="6.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 15;">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="760.0" spacing="10">
                     <children>
                        <Label alignment="CENTER" prefHeight="38.0" prefWidth="120.0" text="Order ID">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtOrderId" style="-fx-background-radius: 3;" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>

                  <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="760.0" spacing="10">
                     <children>
                        <Label alignment="CENTER" prefHeight="38.0" prefWidth="120.0" text="Customer ID">
                           <font>
                              <Font name="System Bold Italic" size="18.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtCustomerId" style="-fx-background-radius: 3;" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>

                  <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="760.0" spacing="10">
                     <children>
                        <Label alignment="CENTER" prefHeight="38.0" prefWidth="120.0" text="Order Date">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtDate" style="-fx-background-radius: 3;" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>

                  <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="760.0" spacing="10">
                     <children>
                        <Label alignment="CENTER" prefHeight="38.0" prefWidth="120.0" text="Order Time">
                           <font>
                              <Font name="System Bold Italic" size="18.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtTime" style="-fx-background-radius: 3;" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>

                  <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="760.0" spacing="10">
                     <children>
                        <Label alignment="CENTER" prefHeight="38.0" prefWidth="120.0" text="Pots Size">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtPotsSize" style="-fx-background-radius: 3;" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>

                  <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="760.0" spacing="10">
                     <children>
                        <Label alignment="CENTER" prefHeight="38.0" prefWidth="120.0" text="Quantity">
                           <font>
                              <Font name="System Bold Italic" size="18.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtQuantity" style="-fx-background-radius: 3;" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
               </children>
            </VBox>

            <ButtonBar prefHeight="50.0" prefWidth="760.0" style="-fx-background-color: transparent;">
               <buttons>
                  <Button mnemonicParsing="false" onAction="#btnSaveOnAction" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 80;" text="Save" />
                  <Button mnemonicParsing="false" onAction="#btnUpdateOnAction" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 80;" text="Update" />
                  <Button mnemonicParsing="false" onAction="#btnClearOnAction" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 80;" text="Clear" />
                  <Button mnemonicParsing="false" onAction="#btnDeleteOnAction" style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 80;" text="Delete" />
               </buttons>
            </ButtonBar>

            <TableView fx:id="tblOrder" onMouseClicked="#tableOnClick" prefHeight="246.0" prefWidth="760.0" style="-fx-background-radius: 5; -fx-border-radius: 5;" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colOrderId" prefWidth="126.0" style="-fx-alignment: CENTER;" text="Order ID" />
                  <TableColumn fx:id="colCustomerId" prefWidth="126.0" style="-fx-alignment: CENTER;" text="Customer ID" />
                  <TableColumn fx:id="colDate" prefWidth="126.0" style="-fx-alignment: CENTER;" text="Order Date" />
                  <TableColumn fx:id="colTime" prefWidth="126.0" style="-fx-alignment: CENTER;" text="Order Time" />
                  <TableColumn fx:id="colPotsSize" prefWidth="126.0" style="-fx-alignment: CENTER;" text="Pots Size" />
                  <TableColumn fx:id="colQuantity" prefWidth="126.0" style="-fx-alignment: CENTER;" text="Quantity" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
