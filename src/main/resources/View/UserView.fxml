<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.desktop.myfx.myfinalproject.Controller.UserController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="750.0" prefWidth="800.0" spacing="15" style="-fx-background-color: #f9fafb;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets top="25.0" right="25.0" bottom="25.0" left="25.0"/>
         </padding>
         <children>
            <Label text="User Management" style="-fx-font-weight: bold; -fx-text-fill: #111827;">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
               <padding>
                  <Insets bottom="15.0"/>
               </padding>
            </Label>

            <VBox spacing="12" style="-fx-background-color: white; -fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 6, 0, 0, 1);">
               <HBox alignment="CENTER_LEFT" spacing="15" prefHeight="40.0">
                  <Label text="User ID" prefWidth="120.0" style="-fx-font-weight: bold; -fx-text-fill: #374151;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtId" prefHeight="36.0" HBox.hgrow="ALWAYS" style="-fx-background-radius: 4; -fx-border-color: #e5e7eb; -fx-border-radius: 4; -fx-border-width: 1;"/>
               </HBox>

               <HBox alignment="CENTER_LEFT" spacing="15" prefHeight="40.0">
                  <Label text="User Name" prefWidth="120.0" style="-fx-font-weight: bold; -fx-text-fill: #374151;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtName" prefHeight="36.0" HBox.hgrow="ALWAYS" style="-fx-background-radius: 4; -fx-border-color: #e5e7eb; -fx-border-radius: 4; -fx-border-width: 1;"/>
               </HBox>

               <HBox alignment="CENTER_LEFT" spacing="15" prefHeight="40.0">
                  <Label text="Password" prefWidth="120.0" style="-fx-font-weight: bold; -fx-text-fill: #374151;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtPassword" prefHeight="36.0" HBox.hgrow="ALWAYS" style="-fx-background-radius: 4; -fx-border-color: #e5e7eb; -fx-border-radius: 4; -fx-border-width: 1;"/>
               </HBox>
            </VBox>

            <ButtonBar prefHeight="50.0" prefWidth="100.0" style="-fx-background-color: transparent; -fx-padding: 15 0 20 0;">
               <buttons>
                  <Button mnemonicParsing="false" onAction="#btnSaveOnAction" text="Save" style="-fx-background-color: #059669; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-pref-width: 100; -fx-pref-height: 35;"/>
                  <Button mnemonicParsing="false" onAction="#btnUpdateOnAction" text="Update" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-pref-width: 100; -fx-pref-height: 35;"/>
                  <Button mnemonicParsing="false" onAction="#btnClearOnAction" text="Clear" style="-fx-background-color: #dc2626; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-pref-width: 100; -fx-pref-height: 35;"/>
                  <Button mnemonicParsing="false" onAction="#btnDeleteOnAction" text="Delete" style="-fx-background-color: #d97706; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-pref-width: 100; -fx-pref-height: 35;"/>
               </buttons>
            </ButtonBar>

            <TableView fx:id="tblUser" onMouseClicked="#tableOnClick" prefHeight="300.0" style="-fx-background-radius: 6; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 6, 0, 0, 1);" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colId" text="User ID" style="-fx-font-weight: bold; -fx-text-fill: #111827;"/>
                  <TableColumn fx:id="colName" text="User Name" style="-fx-font-weight: bold; -fx-text-fill: #111827;"/>
                  <TableColumn fx:id="colPassword" text="Password" style="-fx-font-weight: bold; -fx-text-fill: #111827;"/>
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>