<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.desktop.myfx.myfinalproject.Controller.MilkCollectionController">
   <children>
      <VBox prefHeight="578.0" prefWidth="624.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox prefHeight="49.0" prefWidth="632.0">
               <children>
                  <Label prefHeight="49.0" prefWidth="318.0" text="Milk Collection Management">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="41.0" prefWidth="632.0">
               <children>
                  <Label alignment="CENTER" prefHeight="38.0" prefWidth="117.0" text="Collection_ID">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtId" prefHeight="34.0" prefWidth="486.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox prefHeight="41.0" prefWidth="632.0">
               <children>
                  <Label alignment="CENTER" prefHeight="38.0" prefWidth="117.0" text="Collection_Date">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtDate" prefHeight="34.0" prefWidth="486.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox prefHeight="41.0" prefWidth="632.0">
               <children>
                  <Label alignment="CENTER" prefHeight="38.0" prefWidth="117.0" text="Quantity">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtQuantity" prefHeight="34.0" prefWidth="486.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox prefHeight="41.0" prefWidth="632.0">
               <children>
                  <Label alignment="CENTER" prefHeight="38.0" prefWidth="117.0" text="Buffalo_ID">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtBuffaloId" prefHeight="34.0" prefWidth="486.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <ButtonBar prefHeight="53.0" prefWidth="632.0">
              <buttons>
                <Button mnemonicParsing="false" onAction="#btnSaveOnAction" text="Save" />
                  <Button mnemonicParsing="false" onAction="#btnUpdateOnAction" text="Update" />
                  <Button mnemonicParsing="false" onAction="#btnClearOnAction" text="Clear" />
                  <Button mnemonicParsing="false" onAction="#btnDeleteOnAction" text="Delete" />
              </buttons>
            </ButtonBar>
            <TableView fx:id="tblMilkCollection" onMouseClicked="#tableOnClick" prefHeight="286.0" prefWidth="624.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colId" prefWidth="157.0" text="Collection_ID" />
                <TableColumn fx:id="colDate" prefWidth="147.0" text="Collection_Date" />
                  <TableColumn fx:id="colQuantity" prefWidth="159.0" text="Quantity" />
                  <TableColumn fx:id="colBuffaloId" prefWidth="160.0" text="Buffalo_ID" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
