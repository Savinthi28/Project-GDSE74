<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.desktop.myfx.myfinalproject.Controller.PotsInventoryController">
   <children>
      <VBox prefHeight="612.0" prefWidth="611.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox prefHeight="46.0" prefWidth="611.0">
               <children>
                  <Label prefHeight="46.0" prefWidth="314.0" text="Pots Inventory Management">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="44.0" prefWidth="611.0">
               <children>
                  <Label alignment="CENTER" prefHeight="38.0" prefWidth="117.0" text="Inventory_ID">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtId" prefHeight="34.0" prefWidth="486.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox prefHeight="44.0" prefWidth="611.0">
               <children>
                  <Label alignment="CENTER" prefHeight="38.0" prefWidth="117.0" text="Quantity">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtQuantity" prefHeight="34.0" prefWidth="486.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox prefHeight="44.0" prefWidth="611.0">
               <children>
                  <Label alignment="CENTER" prefHeight="38.0" prefWidth="117.0" text="Pots_Size">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtPotsSize" prefHeight="34.0" prefWidth="486.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox prefHeight="44.0" prefWidth="611.0">
               <children>
                  <Label alignment="CENTER" prefHeight="38.0" prefWidth="117.0" text="Condition">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtCondition" prefHeight="34.0" prefWidth="486.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <ButtonBar prefHeight="55.0" prefWidth="611.0">
              <buttons>
                <Button mnemonicParsing="false" onAction="#btnSaveOnAction" text="Save" />
                  <Button mnemonicParsing="false" onAction="#btnUpdateOnAction" text="Update" />
                  <Button mnemonicParsing="false" onAction="#btnClearOnAction" text="Clear" />
                  <Button mnemonicParsing="false" onAction="#btnDeleteOnAction" text="Delete" />
              </buttons>
            </ButtonBar>
            <TableView fx:id="tblPotsInventory" prefHeight="314.0" prefWidth="611.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colId" prefWidth="139.0" text="Inventory_ID" />
                <TableColumn fx:id="colQuantity" prefWidth="146.0" text="Quantity" />
                  <TableColumn fx:id="colPotsSize" prefWidth="140.0" text="Pots_Size" />
                  <TableColumn fx:id="colCondition" prefWidth="185.0" text="Condition" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
