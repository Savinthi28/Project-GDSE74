<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.desktop.myfx.myfinalproject.Controller.PotsInventoryController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="750.0" prefWidth="800.0" spacing="15" style="-fx-background-color: #f5f5f5;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
         </padding>
         <children>
            <Label text="Pots Inventory Management" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
               <padding>
                  <Insets bottom="10.0"/>
               </padding>
            </Label>

            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
               <HBox alignment="CENTER_LEFT" spacing="15" prefHeight="40.0">
                  <Label text="Inventory ID" prefWidth="120.0" style="-fx-font-weight: bold; -fx-text-fill: #34495e;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtId" prefHeight="35.0" HBox.hgrow="ALWAYS" style="-fx-background-radius: 3; -fx-border-color: #bdc3c7; -fx-border-radius: 3;"/>
               </HBox>

               <HBox alignment="CENTER_LEFT" spacing="15" prefHeight="40.0">
                  <Label text="Quantity" prefWidth="120.0" style="-fx-font-weight: bold; -fx-text-fill: #34495e;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtQuantity" prefHeight="35.0" HBox.hgrow="ALWAYS" style="-fx-background-radius: 3; -fx-border-color: #bdc3c7; -fx-border-radius: 3;"/>
               </HBox>

               <HBox alignment="CENTER_LEFT" spacing="15" prefHeight="40.0">
                  <Label text="Pots Size" prefWidth="120.0" style="-fx-font-weight: bold; -fx-text-fill: #34495e;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtPotsSize" prefHeight="35.0" HBox.hgrow="ALWAYS" style="-fx-background-radius: 3; -fx-border-color: #bdc3c7; -fx-border-radius: 3;"/>
               </HBox>

               <HBox alignment="CENTER_LEFT" spacing="15" prefHeight="40.0">
                  <Label text="Condition" prefWidth="120.0" style="-fx-font-weight: bold; -fx-text-fill: #34495e;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtCondition" prefHeight="35.0" HBox.hgrow="ALWAYS" style="-fx-background-radius: 3; -fx-border-color: #bdc3c7; -fx-border-radius: 3;"/>
               </HBox>
            </VBox>

            <ButtonBar prefHeight="50.0" prefWidth="100.0" style="-fx-background-color: transparent; -fx-padding: 10 0 15 0;">
               <buttons>
                  <Button mnemonicParsing="false" onAction="#btnSaveOnAction" text="Save" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3; -fx-pref-width: 90; -fx-pref-height: 30;"/>
                  <Button mnemonicParsing="false" onAction="#btnUpdateOnAction" text="Update" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3; -fx-pref-width: 90; -fx-pref-height: 30;"/>
                  <Button mnemonicParsing="false" onAction="#btnClearOnAction" text="Clear" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3; -fx-pref-width: 90; -fx-pref-height: 30;"/>
                  <Button mnemonicParsing="false" onAction="#btnDeleteOnAction" text="Delete" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3; -fx-pref-width: 90; -fx-pref-height: 30;"/>
               </buttons>
            </ButtonBar>

            <TableView fx:id="tblPotsInventory" onMouseClicked="#tableOnClick" prefHeight="300.0" style="-fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0;" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colId" text="Inventory ID" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                  <TableColumn fx:id="colQuantity" text="Quantity" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                  <TableColumn fx:id="colPotsSize" text="Pots Size" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                  <TableColumn fx:id="colCondition" text="Condition" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>