<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.desktop.myfx.myfinalproject.Controller.PaymentController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="644.0" prefWidth="800.0" spacing="10" style="-fx-background-color: #f4f4f4;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
         </padding>
         <children>
            <Label text="Payment Management" style="-fx-font-weight: bold; -fx-text-fill: #333;">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
               <padding>
                  <Insets bottom="15.0"/>
               </padding>
            </Label>

            <VBox spacing="8" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
               <HBox alignment="CENTER_LEFT" spacing="10" prefHeight="40.0">
                  <Label text="Payment ID" prefWidth="120.0" style="-fx-font-weight: bold;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtPaymentId" prefHeight="35.0" HBox.hgrow="ALWAYS" style="-fx-background-radius: 3;"/>
               </HBox>

               <HBox alignment="CENTER_LEFT" spacing="10" prefHeight="40.0">
                  <Label text="Order ID" prefWidth="120.0" style="-fx-font-weight: bold;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtOrderId" prefHeight="35.0" HBox.hgrow="ALWAYS" style="-fx-background-radius: 3;"/>
               </HBox>

               <HBox alignment="CENTER_LEFT" spacing="10" prefHeight="40.0">
                  <Label text="Customer ID" prefWidth="120.0" style="-fx-font-weight: bold;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtCustomerId" prefHeight="35.0" HBox.hgrow="ALWAYS" style="-fx-background-radius: 3;"/>
               </HBox>

               <HBox alignment="CENTER_LEFT" spacing="10" prefHeight="40.0">
                  <Label text="Payment Date" prefWidth="120.0" style="-fx-font-weight: bold;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtDate" prefHeight="35.0" HBox.hgrow="ALWAYS" style="-fx-background-radius: 3;"/>
               </HBox>

               <HBox alignment="CENTER_LEFT" spacing="10" prefHeight="40.0">
                  <Label text="Payment Method" prefWidth="120.0" style="-fx-font-weight: bold;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtPaymentMethod" prefHeight="35.0" HBox.hgrow="ALWAYS" style="-fx-background-radius: 3;"/>
               </HBox>

               <HBox alignment="CENTER_LEFT" spacing="10" prefHeight="40.0">
                  <Label text="Payment Amount" prefWidth="120.0" style="-fx-font-weight: bold;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtAmount" prefHeight="35.0" HBox.hgrow="ALWAYS" style="-fx-background-radius: 3;"/>
               </HBox>
            </VBox>

            <ButtonBar prefHeight="50.0" prefWidth="100.0" style="-fx-background-color: transparent; -fx-padding: 10 0 10 0;">
               <buttons>
                  <Button mnemonicParsing="false" onAction="#btnSaveOnAction" text="Save" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3; -fx-pref-width: 80;"/>
                  <Button mnemonicParsing="false" onAction="#btnUpdateOnAction" text="Update" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3; -fx-pref-width: 80;"/>
                  <Button mnemonicParsing="false" onAction="#btnClearOnAction" text="Clear" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3; -fx-pref-width: 80;"/>
                  <Button mnemonicParsing="false" onAction="#btnDeleteOnAction" text="Delete" style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3; -fx-pref-width: 80;"/>
               </buttons>
            </ButtonBar>

            <TableView fx:id="tblPayment" onMouseClicked="#tableOnClick" prefHeight="300.0" style="-fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0;" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colPaymentId" text="Payment ID" style="-fx-font-weight: bold;"/>
                  <TableColumn fx:id="colOrderId" text="Order ID" style="-fx-font-weight: bold;"/>
                  <TableColumn fx:id="colCustomerId" text="Customer ID" style="-fx-font-weight: bold;"/>
                  <TableColumn fx:id="colDate" text="Payment Date" style="-fx-font-weight: bold;"/>
                  <TableColumn fx:id="colMethod" text="Payment Method" style="-fx-font-weight: bold;"/>
                  <TableColumn fx:id="colAmount" text="Amount" style="-fx-font-weight: bold;"/>
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>